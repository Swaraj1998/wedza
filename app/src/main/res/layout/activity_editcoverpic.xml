<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anmol.wedza.EditcoverpicActivity"
    android:background="#fff"
    >

    <ImageButton
        android:id="@+id/uploadpic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/imageView8"
        app:srcCompat="@android:drawable/ic_menu_upload_you_tube" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weddate"
        android:background="@drawable/round_button4"
        android:layout_below="@+id/uploadpic"
        android:hint="Enter Date"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"

        android:textColor="#E92004"
        android:textColorHint="#FF8806"
        />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/wed"
        android:elevation="8dp"
        />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/index" />
</RelativeLayout>
