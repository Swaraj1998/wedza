<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/menutop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/keypeople"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/keypeopleblue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/keypeople"
                android:layout_toEndOf="@+id/keypeople"
                android:layout_centerVertical="true"
                android:text="Key People"
                android:textColor="#000"
                />

            <Button
                android:id="@+id/alerts"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                android:layout_marginRight="10dp"
                android:background="@drawable/alertsblue" />

            <Button
                android:id="@+id/events"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"

                android:background="@drawable/eventsblue" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/newsfeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/menutop"
        android:layout_centerHorizontal="true"
        android:divider="@null"
        android:background="#dcdcdc"
         />

</RelativeLayout>